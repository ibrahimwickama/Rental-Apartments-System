                        <PasswordField layoutX="118.0" layoutY="18.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField GridPane.columnIndex="1"/>
                        <Button fx:id="logButton" mnemonicParsing="false" onAction="#loginClick" text="LogIn"
                                GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Button fx:id="signButton" layoutX="118.0" layoutY="96.0" mnemonicParsing="false"
                                onAction="#signupClick" text="SignUp" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8"
          fx:controller="sample.Controller">
    <children>
        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
              prefWidth="600.0" stylesheets="@Scene.css">
            <children>
                <GridPane alignment="CENTER" layoutX="127.0" layoutY="111.0" prefHeight="157.0" prefWidth="346.0">

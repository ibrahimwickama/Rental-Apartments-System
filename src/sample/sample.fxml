                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="10.0" prefWidth="80.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
                <Label layoutX="159.0" layoutY="369.0" prefHeight="17.0" prefWidth="358.0"
                       text="WickerLabs.   Rental Rooms Management System"/>
                <ImageView fitHeight="109.0" fitWidth="105.0" layoutX="8.0" layoutY="4.0" preserveRatio="true">
                    <image>
                        <Image url="@../WickerLabs.jpg"/>
                    </image>
                </ImageView>
                <Label layoutX="139.0" layoutY="40.0" opacity="0.83" text="WickerLabs;">
                    <font>
                        <Font name="Arial Black" size="48.0"/>
                    </font>
                    <effect>
                        <Lighting>
                            <bumpInput>
                                <Shadow/>
                            </bumpInput>
                            <light>
                                <Light.Distant/>
                            </light>
                        </Lighting>
                    </effect>
                </Label>
            </children>
        </Pane>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
